        </LinearLayout>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/arrow" android:layout_width="40dp" android:layout_height="15dp" android:layout_marginRight="5dp" android:src="@drawable/arrow" android:scaleType="fitEnd" android:layout_weight="0"/>
    </LinearLayout>
</net.imedicaldoctor.imd.Utils.MaterialRippleLayout>
