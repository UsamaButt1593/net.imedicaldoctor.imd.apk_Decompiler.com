<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" style="@style/CardViewStyle">
    <net.imedicaldoctor.imd.Utils.MaterialRippleLayout android:id="@+id/ripple_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="40sp" app:rippleColor2="@color/ColorPrimary" style="@style/RippleStyle">
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:background="@drawable/ripple_background" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
            <TextView android:gravity="center_horizontal" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Copy QIDs"/>
            <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:background="@drawable/ripple_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
                <RelativeLayout android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/circle1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/image1" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/circle_blue"/>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/all_button" android:layout_width="80dp" android:layout_height="80dp">
                        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="All"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/circle2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/image2" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/circle_yellow"/>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/incorrect_button" android:layout_width="80dp" android:layout_height="80dp">
                        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/text2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Incorrect"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/circle3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/image3" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/circle_green"/>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/correct_button" android:layout_width="80dp" android:layout_height="80dp">
                        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/text3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Correct"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </net.imedicaldoctor.imd.Utils.MaterialRippleLayout>
</androidx.cardview.widget.CardView>
