<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" style="@style/CardViewStyle">
    <net.imedicaldoctor.imd.Utils.MaterialRippleLayout android:layout_gravity="center" android:id="@+id/ripple_layout" android:background="#fff" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:rippleAlpha="0.6" app:rippleColor2="#467dbe" app:rippleDuration="300" style="@style/RippleStyle">
