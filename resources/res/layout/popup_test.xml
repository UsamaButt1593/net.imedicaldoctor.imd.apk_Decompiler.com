<?xml version="1.0" encoding="utf-8"?>
<net.imedicaldoctor.imd.Views.Card xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/HighlightBar" android:background="@color/white" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_weight="1">
            <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp" android:layout_weight="1">
                <net.imedicaldoctor.imd.Views.WhiteHighlightButton android:id="@+id/highlight_clear" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="2px"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp" android:layout_weight="1">
                <net.imedicaldoctor.imd.Views.BlueHighlightButton android:id="@+id/highlight_blue" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="2px"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp" android:layout_weight="1">
                <net.imedicaldoctor.imd.Views.YellowHighlightButton android:id="@+id/highlight_yellow" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="2px"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp" android:layout_weight="1">
                <net.imedicaldoctor.imd.Views.GreenHighlightButton android:id="@+id/highlight_green" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="2px"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp" android:layout_weight="1">
                <net.imedicaldoctor.imd.Views.RedHighlightButton android:id="@+id/highlight_red" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="2px"/>
            </RelativeLayout>
        </LinearLayout>
        <View android:background="@drawable/splitter2" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_margin="1dp" android:layout_weight="0"/>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/HighlightBar2" android:layout_width="wrap_content" android:layout_height="40dp">
            <TextView android:textSize="15sp" android:textColor="#ee303030" android:gravity="center_vertical" android:id="@+id/copyTv" android:background="@drawable/my_list_selector" android:paddingLeft="6dp" android:paddingRight="6dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/copy_text"/>
            <View android:background="@drawable/splitter2" android:layout_width="1px" android:layout_height="match_parent" android:layout_margin="2dp"/>
            <TextView android:textSize="15sp" android:textColor="#ee303030" android:gravity="center_vertical" android:id="@+id/dictTv" android:background="@drawable/my_list_selector" android:paddingLeft="6dp" android:paddingRight="6dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Dic"/>
            <View android:background="@drawable/splitter2" android:layout_width="1px" android:layout_height="match_parent" android:layout_margin="2dp"/>
            <TextView android:textSize="15sp" android:textColor="#ee303030" android:gravity="center_vertical" android:id="@+id/noteTv" android:background="@drawable/my_list_selector" android:paddingLeft="6dp" android:paddingRight="6dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/annotation"/>
        </LinearLayout>
    </LinearLayout>
</net.imedicaldoctor.imd.Views.Card>
