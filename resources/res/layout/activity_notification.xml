<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#fff" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="#fff">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#c8a900" android:gravity="center" android:id="@+id/notification_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Title" android:fontFamily="@font/iran_sans"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center" android:id="@+id/notification_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Content" android:lineSpacingExtra="3dp" android:fontFamily="@font/iran_sans"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:weightSum="2">
                <Button android:textSize="18sp" android:textColor="@color/white" android:id="@+id/cancel" android:background="@color/red" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:text="باشه" android:layout_weight="1" android:fontFamily="@font/iran_sans"/>
                <Button android:textSize="18sp" android:textColor="@color/white" android:id="@+id/moreinfo" android:background="@color/green" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:text="اطلاعات بیشتر" android:layout_weight="1" android:fontFamily="@font/iran_sans"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
