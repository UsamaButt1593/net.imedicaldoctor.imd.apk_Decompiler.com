<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" style="@style/CardViewStyle">
    <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:background="@color/white" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="40sp">
        <ImageView android:layout_gravity="center" android:id="@+id/image" android:background="@color/clear" android:layout_width="40sp" android:layout_height="40dp" android:src="0x7f0801ac" android:layout_weight="0"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="14dp" android:textColor="@color/black" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Harrison " android:layout_weight="1" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
            <TextView android:textSize="12dp" android:textColor="@color/darkGrey" android:gravity="center_vertical" android:id="@+id/subtitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Downloading 0.5 of 123 MB ( 54%)" android:layout_weight="1" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="5dp">
                <TextView android:textSize="11dp" android:textColor="@color/blue" android:gravity="center" android:id="@+id/latest" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Show Latest Version" android:layout_weight="1"/>
                <TextView android:textSize="11dp" android:textColor="@color/blue" android:gravity="right" android:layout_gravity="right" android:id="@+id/demo" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Demo" android:layout_weight="2"/>
            </LinearLayout>
            <TextView android:textSize="11dp" android:textColor="@color/darkGrey" android:gravity="center" android:id="@+id/desc" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Updated Monthly for two years" android:layout_weight="1"/>
        </LinearLayout>
        <at.grabner.circleprogress.CircleProgressView android:gravity="center" android:layout_gravity="center" android:id="@+id/circleView" android:layout_width="44dp" android:layout_height="44dp" app:cpv_barWidth="2dp" app:cpv_innerContourSize="0dp" app:cpv_outerContourSize="0dp" app:cpv_rimColor="#ff9adeff" app:cpv_rimWidth="2dp" app:cpv_textColor="#ff1e76c7" app:cpv_textSize="10dp" app:cpv_unitColor="#ff2e81c7"/>
        <net.imedicaldoctor.imd.Utils.MaterialRippleLayout android:layout_gravity="center" android:id="@+id/ripple_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:minHeight="35dp" app:rippleColor2="@color/ColorPrimary" style="@style/RippleStyle">
            <Button android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/download_button" android:background="@drawable/rounded_button" android:layout_width="130dp" android:layout_height="40dp" android:text="Download" android:layout_weight="0"/>
        </net.imedicaldoctor.imd.Utils.MaterialRippleLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
