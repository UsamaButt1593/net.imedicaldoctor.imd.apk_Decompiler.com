                <ImageView android:id="@+id/noteIv" android:layout_width="20dp" android:layout_height="match_parent" android:src="@drawable/bmnote" android:scaleType="fitCenter"/>
                <TextView android:textSize="12sp" android:textColor="#ffffffff" android:gravity="center" android:id="@+id/noteTv" android:tag="1" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/annotation"/>
