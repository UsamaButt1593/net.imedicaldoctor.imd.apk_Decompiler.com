            <Button android:textSize="14sp" android:id="@+id/bmAddButton" android:background="@drawable/btn_default_holo_dark2" android:layout_width="match_parent" android:layout_height="38dp" android:text="@string/add_new_bookmark" android:layout_weight="3"/>
