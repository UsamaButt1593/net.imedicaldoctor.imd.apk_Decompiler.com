            <LinearLayout android:id="@+id/highlightLay" android:background="@drawable/my_list_selector" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent">
                <ImageView android:id="@+id/highlightIv" android:layout_width="20dp" android:layout_height="match_parent" android:src="@drawable/bmhighlight" android:scaleType="fitCenter"/>
                <TextView android:textSize="12sp" android:textColor="#ffffffff" android:gravity="center" android:id="@+id/highlightTv" android:tag="1" android:paddingLeft="6dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/highlight"/>
